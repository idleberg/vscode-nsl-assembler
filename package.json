{
	"name": "nsl-assembler",
	"displayName": "nsL Assembler",
	"description": "Language syntax, IntelliSense and build system for nsL Assembler",
	"version": "1.2.1",
	"publisher": "idleberg",
	"license": "MIT",
	"author": {
		"name": "Jan T. Sott",
		"url": "http://github.com/idleberg"
	},
	"scripts": {
		"compile": "npm run build",
		"build": "concurrently --prefix-colors 'blue,green' 'npm:build:*'",
		"build:code": "tsdown",
		"build:image": "sharp resize 1024 1024 --input src/logo.svg --output resources/logo.png",
		"dev": "npm run start",
		"fix": "biome check --apply",
		"lint": "biome check",
		"prepare": "lefthook install",
		"publish:ovsx": "ovsx publish --no-dependencies",
		"publish:vsce": "vsce publish --githubBranch main --no-dependencies",
		"start": "npm run build -- --watch",
		"test": "echo \"no tests yet\" && exit 0",
		"vscode:prepublish": "npm run build"
	},
	"keywords": [
		"nsis",
		"nsl-assembler"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/vscode-nsl-assembler"
	},
	"homepage": "https://github.com/idleberg/vscode-nsl-assembler#readme",
	"bugs": {
		"url": "https://github.com/idleberg/vscode-nsl-assembler/issues"
	},
	"type": "commonjs",
	"main": "./lib/index.cjs",
	"extensionDependencies": [
		"idleberg.nsis"
	],
	"dependencies": {
		"vscode-get-config": "^0.6.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@idleberg/configs": "^0.4.1",
		"@nsis/logo": "0.1.1",
		"@types/micromatch": "^4.0.10",
		"@types/node": "24",
		"@types/vscode": "1.85.0",
		"@types/which": "^3.0.4",
		"concurrently": "^9.2.1",
		"ovsx": "^0.10.7",
		"sharp-cli": "^5.2.0",
		"tsdown": "^0.18.3",
		"typescript": "^5.9.3"
	},
	"icon": "resources/logo.png",
	"galleryBanner": {
		"color": "#232323",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "nsL Assembler",
			"properties": {
				"nsl-assembler.pathToJar": {
					"type": "string",
					"default": "",
					"markdownDescription": "%nslAssemblerPathToJar%"
				},
				"nsl-assembler.customArguments": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"/nomake",
						"/nopause"
					],
					"markdownDescription": "%nslAssemblerDefaultArgs%"
				},
				"nsl-assembler.nsisHome": {
					"type": "string",
					"default": "",
					"description": "Specify the NSIS home directory (tried to detect automatically if not specified)"
				}
			}
		},
		"languages": [
			{
				"id": "nsl-assembler",
				"aliases": [
					"nsL Assembler",
					"nsl"
				],
				"extensions": [
					".nsl"
				],
				"configuration": "./config/nsl-assembler.json"
			}
		],
		"grammars": [
			{
				"language": "nsl-assembler",
				"scopeName": "source.nsl",
				"path": "./syntaxes/nsl-assembler.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "extension.nsl-assembler.transpile",
				"title": "Transpile nsL Assembler code",
				"icon": {
					"dark": "./resources/icon--build-dark.svg",
					"light": "./resources/icon--build-light.svg"
				}
			}
		],
		"keybindings": [
			{
				"key": "ctrl+shift+b",
				"mac": "cmd+alt+b",
				"when": "editorFocus && editorLangId == nsl-assembler",
				"command": "extension.nsl-assembler.transpile"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == nsl-assembler",
					"command": "extension.nsl-assembler.transpile",
					"group": "navigation@1"
				}
			]
		},
		"snippets": [
			{
				"language": "nsl-assembler",
				"path": "./snippets/core.nsl-assembler.json"
			}
		]
	},
	"packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
